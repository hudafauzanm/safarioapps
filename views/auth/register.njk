{% extends "layouts/layout.njk" %}
{% set page_title = "Register" %}

{% block main %}
<!--================Search Package section Start =================-->
<section class="hero-banner magic-ball">
  <div class="container">
    <div class="row align-items-center text-center text-md-left">
      <div class="col-lg-6 col-xl-5 align-self-center mb-5 mb-lg-0">
        <div class="search-content">
          <h2>Sistem Kehadiran Mahasiswa<br class="d-none d-xl-block"> Informatika <br class="d-none d-xl-block"> ITS</h2>
          <p>Sebuah sistem informasi yang berguna dalam merekap absensi mahasiswa secara online</p>
          <a class="button" href="#">Register</a>
        </div>
      </div>
      <div class="col-lg-6 col-xl-6 offset-xl-1">
        <div class="search-wrapper">
          <h3>Masukan Data Diri</h3>
          <form class="search-form" method="post" action="/register/registeruser">
            <div class="form-group">
              <input class="form-control" type="text" name="username" id="username" placeholder="Username" required>
            </div>
            <div class="form-group">
              <input class="form-control" type="password" name="password" id="password" placeholder="Password" required>
            </div>
            <div class="form-group">
              <input class="form-control" type="password" id="repassword" placeholder="Password" required>
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="nama" placeholder="Nama Lengkap" required>
            </div>
            <div class="form-group">
              <select name="category" id="category">
                <option value="disabled" disabled selected>Category</option>
                <option value="1">Dosen</option>
                <option value="2">Mahasiswa</option>
              </select>
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="angkatan" placeholder="Angkatan" required>
            </div>
            <div class="form-group">
              <button class="button border-0 mt-3" type="submit">Register</button>
            </div>
          </form>
        </div>

      </div>
    </div>
  </div>
</section>
<!--================Search Package section End =================-->
{% endblock %}